<div class="flex flex-col justify-start items-center max-h-[calc(50vh)]">  
  <h2 class="text-7xl font-bold mt-20 underline">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="min-w-[30vw]  mt-5 p-20  h-[60vh] flex flex-col items-start space-y-5 bg-slate-100 rounded-lg">

      <div class="field">
        <%= f.label :email, class:"font-bold text-2xl" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mt-1 min-w-[40vw] h-[3vw] p-2 text-xl outline outline-2 outline-slate-600 rounded-sm" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"font-bold text-2xl" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"mt-1 min-w-[40vw] h-[3vw] p-2 text-xl outline outline-2 outline-slate-600 rounded-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",class:"bg-black text-white p-5 min-w-[40vw] rounded-sm hover:cursor-pointer font-bold" %>
      </div>
      <%= render "devise/shared/links"   %>
    </div>
  <% end %>

</div>

